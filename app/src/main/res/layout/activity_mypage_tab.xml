<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--tools:context=".memoTab.MemoAddActivity"-->


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:longClickable="false"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="마이페이지" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="#BDBDBD"/>

    <LinearLayout
        android:id="@+id/profile"
        app:layout_constraintTop_toBottomOf="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal" >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:src="@drawable/default_profile" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/border"
            android:layout_marginVertical="19dp"
            android:layout_marginHorizontal="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mypage_Nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Nickname"
                android:text="성청하"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/mypage_Dong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="청파동"
                tools:text="Dong"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/border2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        android:background="#BDBDBD"/>

    <LinearLayout
        android:id="@+id/mypage_History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/border2"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mypage_Openlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/openlist"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="오픈 내역"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_ParticipateList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/basket"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="참여 내역"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_LikeList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:src="@drawable/heart"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="좋아요"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_History"
        android:background="#BDBDBD"/>

    <TextView
        android:id="@+id/mypage_Recentview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mypage_History"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:padding="10dp"
        android:text="최근 본 딜"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/border3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_Recentview"
        android:background="#BDBDBD"/>

    <TextView
        android:id="@+id/mypage_Announce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/border3"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:padding="10dp"
        android:text="공지사항"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/mypage_FAQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mypage_Announce"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:padding="10dp"
        android:text="FAQ"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/mypage_Suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mypage_FAQ"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:padding="10dp"
        android:text="앱 문의 / 건의"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <View
        android:id="@+id/border4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mypage_Suggestion"
        android:background="#BDBDBD"/>

    <TextView
        android:id="@+id/mypage_Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/border4"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="15dp"
        android:padding="10dp"
        android:text="앱 설정"
        android:textSize="17dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/memoAddFinish"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>